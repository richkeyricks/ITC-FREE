    def check_pro_status(self):
        """Checks if the user has donated for Pro or VIP Access"""
        def _task():
            try:
                # Optimized single fetch
                res = self.db_manager.client.table("user_profiles").select("is_pro,is_vip").eq("hwid", self.db_manager.user_id).execute()
                if res.data:
                    data = res.data[0]
                    self.is_pro = data.get('is_pro', False)
                    self.is_vip = data.get('is_vip', False)
                    
                    if self.is_vip:
                        self.log("INFO", "ðŸ’Ž VIP Status Verified: SPC Signal Bridge Unlocked!")
                    elif self.is_pro:
                        self.log("INFO", "âœ¨ PRO Status Verified: AI Assistant Unlocked!")

                    # UI Updates for Locks
                    self.after(0, self._update_premium_locks)
            except:
                pass
        threading.Thread(target=_task, daemon=True).start()

